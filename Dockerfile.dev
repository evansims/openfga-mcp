# Development Dockerfile for OpenFGA MCP
FROM python:3.12-slim-bookworm

# Add metadata labels
LABEL org.opencontainers.image.title="OpenFGA MCP Development Environment"
LABEL org.opencontainers.image.description="Development environment for OpenFGA MCP"
LABEL org.opencontainers.image.source="https://github.com/evansims/openfga-mcp"
LABEL org.opencontainers.image.licenses="Apache-2.0"

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    git \
    curl \
    make \
    build-essential \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install uv for Python package management
RUN curl -sSf https://astral.sh/uv/install.sh | sh

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH="/root/.cargo/bin:$PATH"

# Set working directory
WORKDIR /app

# When the container starts, activate the virtual environment if it exists
# or create one if it doesn't
ENTRYPOINT ["/bin/bash", "-c"]
CMD ["if [ -d .venv ]; then source .venv/bin/activate; else echo 'Virtual environment not found. Run \"make setup\" to create it.'; fi; exec bash"]
